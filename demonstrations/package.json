{
  "name": "bulk-codesnap-runner",
  "displayName": "Bulk CodeSnap Runner",
  "version": "0.0.1",
  "engines": { "vscode": "^1.60.0" },
  "scripts": {
    "snap": "node run-bulk-snap.js"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "bulkSnap.run",
        "title": "Run Bulk CodeSnap"
      }
    ],
    "configuration": {
      "properties": {
        "bulkSnap.files": {
          "type": "array",
          "description": "List of file paths to snapshot."
        },
        "bulkSnap.outputFolder": {
          "type": "string",
          "description": "Folder where PNGs will be saved."
        }
      }
    }
  },
  "main": "./extension.js"
}
